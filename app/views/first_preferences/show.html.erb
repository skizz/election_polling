<h1>First Preferences</h1>
<h2>2013 Election Results</h2>
<% @preferences.each do |pref| %>
    <div class="row <%= pref.styles %>">
      <div class="col-sm-10">
        <%= pref.candidate_surname%>,
        <%= pref.candidate_given_name %>
        <% if pref.elected? %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
        <% end %>
      </div>
      <div class="col-sm-1"><%= pref.party_ab %></div>
      <div class="col-sm-2">
        <div class="row">
          <div class="col-sm-6 text-right"><%= pref.ordinary_votes %></div>
          <div class="col-sm-6 text-right"><%= "%0.1f" % pref.swing %></div>
        </div>
      </div>
    </div>
<% end %>
<% @informals.each do |pref| %>
    <div class="row <%= pref.styles %>">
      <div class="col-sm-10">INFORMAL</div>
      <div class="col-sm-2">
        <div class="row">
          <div class="col-sm-6 text-right"><%= pref.ordinary_votes %></div>
          <div class="col-sm-6 text-right"><%= "%0.1f" % pref.swing %></div>
        </div>
      </div>
    </div>
<% end %>